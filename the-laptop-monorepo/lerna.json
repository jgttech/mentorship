{
    "packages": [
        "packages/*",
        "services/*",
        "src/*"
    ],
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "1.0.0",
    "ignoreChanges": [
        "**/*.spec.(js|jsx|ts|tsx)",
        "**/*.test.(js|jsx|ts|tsx)",
        "**/__test__/**",
        "**/*.md",
        "**/*.yml",
        "**/*.yaml"
    ]
}
